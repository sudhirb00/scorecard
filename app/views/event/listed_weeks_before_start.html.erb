
<div id="chartdiv" class="span9">
  Timescity Chart.

</div>     <!- end of chartdiv ->

<div id="chart_data" class="span2">
  <table class="table table-striped">
    <thead>
    <tr>
      <th>Events Listed before or after <%= label_to_use %></th>
      <th>Count</th>
    </tr>
    </thead>
    <tbody>

    <% count_total = 0 %>
    <% @events_data.each { | k, v | %>
        <tr>
          <td>
            <%= raw events_details_link(k,field_to_use, label_to_use)   %>
          </td>
          <td style="text-align: right;">
            <%= v %>
            <% count_total += v %>
          </td>
        </tr>

    <%  } %>
    </tbody>
    <thead>
    <tr>
      <th>Total</th>
      <th style="text-align: right;"><%= count_total %></th>
    </tr>
    </thead>
  </table>
</div>

<script type="text/javascript">
    var chart = new FusionCharts("/assets/fusionCharts/FCF_Column3D.swf", "ChartId", <%= PIE_CHARTS_WIDTH %>, <%= PIE_CHARTS_HEIGHT %>);
    chart.setDataXML('<%= raw @str_xml %>');
    chart.render("chartdiv");
</script>
