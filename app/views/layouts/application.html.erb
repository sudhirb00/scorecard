<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= content_for?(:title) ? yield(:title) : "Timescity Scorecard" %></title>
  <meta name="description" content="">
  <meta name="author" content="">
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

  <!-- DataTables CSS -->
  <link rel="stylesheet" type="text/css" href="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.8.2/css/jquery.dataTables.css">

  <!-- jQuery
  <script type="text/javascript" charset="utf8" src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.7.1.min.js"></script>
  -->

  <!-- DataTables -->
  <script type="text/javascript" charset="utf8" src="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.8.2/jquery.dataTables.min.js"></script>

  <%= yield(:head) %>
</head>
<body>

      <!-- Nav bar here -->
      <%= render 'layouts/navigation' %>

      <div id="wait_div" style="display:none;">

      <div class="progress">
             <div>   <p>Please wait ...</p>   </div>
        <div class="bar"
             style="width: 60%;"></div>
      </div>
      </div>



      <div id="main" role="main">
  <div class="container">
    <div class="content">
      <div class="row-fluid">
        <div class="span12">
          <%= render 'layouts/messages' %>

          <div class="breadcrumb">
          <%= render_breadcrumbs %>
          </div>
          <%= yield %>
        </div>
      </div>
      <footer class="foooter">
        <%= render 'layouts/footer' %>
      </footer>
    </div>
  </div> <!--! end of .container -->


</div> <!--! end of #main -->
</body>
</html>